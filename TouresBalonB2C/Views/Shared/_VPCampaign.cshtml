@model IEnumerable<Entities.Campaign>


@{int i = 0;}
@foreach (var item in Model)
{
    if (item.productCollection.Count>0) { 
        if ((i % 4) == 0)
        {
            if ((i % 4) == 0 && i != 0)
            {
                @:</div>
            }
            @:<div class="resp-tabs-container">
        }
        @:<div class="col-md-3 product-men"><div class="men-pro-item simpleCart_shelfItem"><div class="men-thumb-item"><img src="@item.image" alt="" class="pro-image-front"><img src="@item.image" alt="" class="pro-image-back"><div class="men-cart-pro"><div class="inner-men-cart-pro"><a href="@Url.Action("Details/"+@item.productCollection[0].id  ,"Producto")" class="link-product-add-cart">Detalles</a></div>            </div>            <span class="product-new-top">Nuevo</span>        </div>        <div class="item-info-product ">            <h4><a href="@Url.Action("Details/"+@item.productCollection[0].id  ,"Producto")">@item.name</a></h4>            <div class="info-product-price">                <span class="item_price">@Html.DisplayFor(model => item.productCollection[0].totalPrice, new { @class = "form-control" })</span>            </div>            @Html.ActionLink("Agregar al carrito", "AgregarCarrito", "Carrito", new { id = item.productCollection[0].id }, new { @class = "single-item hvr-outline-out button2" })        </div>    </div></div>
        i++;
    }
}
@if (i != 0)
{
@:</div>
}